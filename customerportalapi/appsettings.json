{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "customerportaldb": "${MONGO_URL}"
  },

  "DatabaseName": "${MONGO_DATABASE}",
  "GatewayUrl": "${GATEWAY_URL}",
  "ProfileAPI": "${PROFILE_API}",
  "ContractsAPI": "${CONTACTS_API}",
  "MailFrom": "${MAIL_FROM}",
  "InviteConfirmation" : "${INVITE_URL}",
  "Email": {
    "Smtp": {
      "Host": "${SMTP_HOST}",
      "Port": 587,
      "EnableSSL": false,
      "Username": "${SMTP_USERNAME}",
      "Password": "${SMTP_PASSWORD}"
    }
  }
}
